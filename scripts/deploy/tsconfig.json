{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"],
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
